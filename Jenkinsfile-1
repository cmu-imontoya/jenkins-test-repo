pipeline {
    agent any
    
    stages {
        stage('Git Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/cmu-imontoya/jenkins-test-repo']])
                echo 'Git Checkout Completed'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                    python3 -m venv venv
                    . venv/bin/activate
                    pip install pylint
                '''
                echo 'Dependencies Installed'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('ServerNameSonar') {
                    sh '''
                        . venv/bin/activate
                        sonar-scanner \
                        -Dsonar.projectKey=ProjectNameSonar \
                        -Dsonar.projectName="ProjectNameSonar" \
                        -Dsonar.language=py \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=http://localhost:9000 \
                        -Dsonar.python.pylint.reportPath=pylint-report.txt
                    '''
                }
                echo 'SonarQube Analysis Completed'
            }
        }
    }

}
